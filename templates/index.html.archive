<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>SMO Table of Contents</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h1 class="mb-4">SMO Table of Contents</h1>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>SMO</th>
          <th>Client</th>
        </tr>
      </thead>
      <tbody>
        {% for smo_client in smo_clients %}
        <tr>
          <td><a href="{{ url_for('test_toc', smo=smo_client.smo) }}">{{ smo_client.smo }}</a></td>
          <td>{{ smo_client.client }}</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
    <h2 class="mb-4">Create SMO</h2>
    <form action="{{ url_for('create_smo_form') }}" method="post" class="mb-4">
      <div class="mb-3">
        <label for="smo" class="form-label">SMO:</label>
        <input type="text" id="smo" name="smo" class="form-control" required>
      </div>
      <button type="submit" class="btn btn-primary">Create SMO</button>
    </form>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>